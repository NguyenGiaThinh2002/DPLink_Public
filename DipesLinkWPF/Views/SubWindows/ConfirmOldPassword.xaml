<Window
    x:Class="DipesLink.Views.SubWindows.ConfirmOldPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DipesLink.Views.SubWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="300"
    Height="130"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>

        <StackPanel VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Margin="5,0,0,0" VerticalAlignment="Center">Confirm Old Password:</TextBlock>
                <PasswordBox
                    x:Name="PasswordBox1"
                    Width="150"
                    Height="30"
                    Margin="5,0,0,0"
                    PasswordChar="*" />
            </StackPanel>
            <Button x:Name="ButtonConfirm"
                Width="70"
                Height="30"
                Margin="30,5,0,0" Click="ButtonConfirm_Click"
                VerticalAlignment="Center"
                Content="Confirm" />
        </StackPanel>

    </Grid>
</Window>
